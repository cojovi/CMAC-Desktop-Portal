{
  "name": "cmac-roofing-portal",
  "version": "1.0.0",
  "description": "CMAC Roofing Portal",
  "author": "CMAC Roofing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.cmac.roofing.portal",
    "productName": "CMAC Roofing Portal",
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "electronVersion": "28.0.0",
    "asar": true
  }
}
